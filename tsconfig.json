{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./src",
    "outDir": "./build",
    "inlineSourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
